<article class="post-item">
  <h2>
    <%= post.title %>
  </h2>
  <p class="post-item-author">By <%= post.name %>
  </p>
  <p>
    <%= post.summary %>
  </p>
  <div class="post-actions">
    <form action="/delete-post/<%= post.postId %>" method="POST">
      <button type="submit" class="btn btn-alt">Delete Post</button>
    </form>
    <a href="/edit-post/<%= post.postId %>">Edit Post</a>
    <a class="btn" href="/posts/<%= post.postId %>">View Post</a>
  </div>
</article>